[
  {
    "id": "hydra-oauth2-auth",
    "upstream": {
      "strip_path": "/hydra",
      "url": "http://hydra-public:4444"
    },
    "match": {
      "url": "http://api.engelbrink.dev/hydra/oauth2/auth",
      "methods": ["GET"]
    },
    "authenticators": [{ "handler": "noop" }],
    "authorizer": { "handler": "allow" },
    "mutators": [{ "handler": "noop" }],
    "errors": [{ "handler": "json" }]
  },
  {
    "id": "hydra-oauth2-token",
