  {
    "id": "device-service-claim",
    "upstream": {
      "strip_path": "/device-service",
      "url": "http://device-service:7979"
    },
    "match": {
      "url": "http://api.engelbrink.dev/device-service/devices/<.*>",
      "methods": ["POST"]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "introspection_url": "http://hydra-admin:4445/oauth2/introspect",
          "scope_strategy": "exact",
          "required_scope": ["openid", "offline"]
        }
      }
    ],
    "authorizer": { "handler": "allow" },
    "mutators": [{ "handler": "noop" }],
    "errors": [{ "handler": "json" }]
  },
